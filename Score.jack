
class Score {
	field int value;
	
	constructor Score new() {
		let value = 0;
		return this;
	}
	
	method void dispose() {
		do Memory.deAlloc(this);
		return;
    }
	
	method void render() {
		
		do Draw.show_score(value);
		return;
		
	}
	
	method void increment_score() {
		let value = value + 1;
		return;
	}
}